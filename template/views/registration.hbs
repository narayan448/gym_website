<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Register Here</title>
</head>

<body>

    <header>
        {{> navbar}}
    </header>


    <div class="container col-md-7 col-8 registration_form my-2 py-3">
        <form action="/registration" method="POST">
            <h2 class="text-capitalize text-center color_W">registration form</h2>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label text-capitalize color_W">name</label>
                <input type="name" class="form-control bg-transparent" id="exampleFormControlInput1" placeholder=""
                    name="name">
            </div>


            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label text-capitalize color_W">email</label>
                <input type="email" class="form-control bg-transparent" id="exampleFormControlInput1"
                    placeholder="name@gmail.com" name="email">
            </div>

            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label text-capitalize color_W">phone no</label>
                <input type="phone" class="form-control bg-transparent" id="exampleFormControlInput1" placeholder=""
                    name="phoneno">
            </div>
            <div class="mb-3 text-capitalize rfl">
                <span class="color_W">Gender</span>
                <div class="form-check form-check-inline mb-3">
                    <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male">
                    <label class="form-check-label text-capitalize color_W" for="inlineRadio1">male</label>
                </div>

                <div class="form-check form-check-inline mb-3">
                    <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female">
                    <label class="form-check-label text-capitalize color_W" for="inlineRadio2">female</label>
                </div>
            </div>

            <div class="mb-3">
                <select class="form-select bg-transparent text-capitalize color_W" aria-label="Default select example" name="package" id="select">
                    <option selected class='bg-dark' >select your package</option>
                    <option class='bg-dark' value="silver">silver</option>
                    <option class='bg-dark' value="gold">gold</option>
                    <option class='bg-dark' value="daimond">daimond</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label text-capitalize color_W">address</label>
                <textarea class="form-control bg-transparent" id="exampleFormControlTextarea1" rows="3"
                    name="address"></textarea>
            </div>

            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-outline-light text-capitalize">submit</button>
            </div>


    </div>
    </form>
    </div>

    {{> footer}}

























